{% extends "template.twig"%}
{% block header %}
    {{parent()}}
<link href="/css/jquery.dataTables.css" rel="stylesheet">
<script type="text/javascript" language="javascript" src="/js/jquery.js"></script>
<script type="text/javascript" language="javascript" src="/js/jquery.dataTables.js"></script>
<script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
        $('#convenios').dataTable({
            "sPaginationType": "full_numbers"
        });
    });
</script>
{% endblock%}



    {% block container %}
<h1> Situação: {{situacao}} - {{nomeEstado}}</h1>
<table id="convenios" class="table table-striped table-bordered dataTable">
    <thead>
        <tr>  
            <th>ID Registro</th>
            <th>Nome</th>
            <th> Valor do Convenio em R$</th>
            <th> Valor Repassado em R$ </th>
            <th> Diferença em R$ </th>
        </tr>
    </thead>
    <tbody>
            {% for chave, ong in listaOng %}
        <tr>
            <td>
                <a href="/convenio/{{ong.id}}" >{{ong.id}}</a>
                </td>
            <td>{{ong.nome}}</td>
            <td> {{ong.valor_global|default('Não definido')}}</td>
            <td>{{ong.valor_repasse|default('Não definido')}}</td>
            <td> {{ong.valor_global - ong.valor_repasse}}</td>
        </tr>
             {% endfor%}
    </tbody>
</table>
    {% endblock %}
     {% block table %}

{% endblock %}

