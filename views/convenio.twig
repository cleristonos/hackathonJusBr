{% extends "template.twig"%} 
{% block container %}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Informações sobre o convênio: </h3>
    </div>
    <div class="panel-body">
        <h4><strong>ID: </strong>
    {{convenio.id|default('Não definido')}}</h4><hr>

        <table style="width: 100%">
            <tr>
                <td style="width: 50%;word-wrap:break-word;">
                    <h4><strong>Data de Início de Vigência: </strong>
    {{convenio.data_inicio_vigencia|default('Não definido')}}</h4>
                </td>
                <td style="width: 50%;word-wrap:break-word;">
                    <h4><strong>Data de Fim de Vigência: </strong>
    {{convenio.data_fim_vigencia|default('Não definido')}}</h4>
                </td>
            </tr>
        </table>
        <hr>

        <table style="width: 100%">
            <tr>
                <td style="width: 50%;word-wrap:break-word;">
                    <h4><strong>Valor Total do Convênio: </strong>
    {{convenio.valor_global|default('Não definido')}}</h4>
                </td>
                <td style="width: 50%;word-wrap:break-word;">
                    <h4><strong>Valor Total Repassado: </strong>
    {{convenio.valor_repasse|default('Não definido')}}</h4>
                </td>
            </tr>
        </table>
        <hr>

        <table style="width: 100%">
            <tr>
                <td style="width: 50%;word-wrap:break-word;">
                    <h4><strong>Data da Assinatura: </strong>
    {{convenio.data_assinatura|default('Não definido')}}</h4>
                </td>
                <td style="width: 50%;word-wrap:break-word;">
                    <h4><strong>Data de Publicação: </strong>
    {{convenio.data_publicacao|default('Não definido')}}</h4>
                </td>
            </tr>
        </table>
        <hr>

        <table style="width: 100%">
            <tr>
                <td style="width: 50%;word-wrap:break-word;">
                    <h4><strong>Proponente: </strong>
    {{convenio.nome_proponente|default('Não definido')}}</h4>
                </td>
                <td style="width: 50%;word-wrap:break-word;">
                    <h4><strong>Município do Proponente: </strong>
    {{convenio.nome_municipio|default('Não definido')}}</h4>
                </td>
            </tr>
        </table>
        <hr>

        <table style="width: 100%">
            <tr>
                <td style="width: 50%;word-wrap:break-word;">
                    <h4><strong>Orgão Concedente: </strong>
    {{convenio.nome_orgao|default('Não definido')}}</h4><hr> 
                </td>
            </tr>
        </table>
        <h4><strong>Situação do Convênio: </strong>
    {{convenio.nome_situacao|default('Não definido')}}</h4><hr>
        </td>
        </tr>
        </table>

        <table style="width: 100%">
            <tr>
                <td style="width: 50%;word-wrap:break-word;">
                    <h4><strong>Subsituação do Convênio: </strong>
    {{convenio.nome_subsituacao|default('Não definido')}}</h4><hr>
                </td>
            </tr>
        </table>

        <table style="width: 100%">
            <tr>
                <td style="width: 50%;word-wrap:break-word;">
                    <h4><p style="text-align: justify;"><strong>Objeto: </strong>
    {{convenio.objeto|default('Não definido')}}</p></h4><hr>
                </td>
            </tr>
        </table>

        <table style="width: 100%">
            <tr>
                <td style="width: 50%;word-wrap:break-word;">
                    <h4><p style="text-align: justify;"><strong>Justificativa: </strong>
    {{convenio.justificativa|default('Não definido')}}</p></h4><hr>
                </td>
            </tr>
        </table>
    </div>
</div>
{% endblock%}